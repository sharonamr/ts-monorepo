{
  "include": [
    "src",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ts-monorepo/components/*": [
        "../components/src/*"
      ]
    },
    "outDir": "./build/",
    "target": "es6",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  }
}